<h1>Outdoor.sy</h1>
<div class="row mb-2">
  <%= form_with url: upload_file_home_index_path, local: false,multipart: true, format: :js do |form| %>
    <div class="form-group mb-2">
      <%= form.label "Upload Vehicle List", class: "col-form-label" %>
      <%= form.file_field :file, required: true, class: "form-control" %>
    </div>
    <div class="form-group">
      <%= form.submit "Upload", class: "btn btn-primary" %>
    </div>
  <% end %>
</div>

<div class="row mb-4 mt-4">
<%= form_for_filterrific @filterrific, html: { id: "filterrific-no-ajax-auto-submit", class: "form-group" } do |f|%>
    Sorted by
    <%= f.select(:sorted_by, @filterrific.select_options[:sorted_by], class: "form-select") %>
    <%= render_filterrific_spinner %>
<%= f.submit "Filter", class: "btn btn-primary btn-sm" %>
<% end %>
<div>
<div id="vehicle-table", class="mt-3 mb-3>
  <%= render partial: "vehicles/table", locals: { vehicles: @vehicles } %>
</div>

