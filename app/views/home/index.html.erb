<h1>Outdoor.sy</h1>
<%= form_with url: upload_file_home_index_path, local: false,multipart: true, format: :js do |form| %>
  <div class="form-group">
    <%= form.label :file %>
    <%= form.file_field :file, required: true, class: 'form-control' %>
  </div>
  <div class="form-group">
    <%= form.submit 'Upload', class: 'btn btn-primary' %>
  </div>
<% end %>

<%= form_for_filterrific @filterrific, html: { id: 'filterrific-no-ajax-auto-submit' } do |f|%>
  <div>
    Sorted by
    <%= f.select(:sorted_by, @filterrific.select_options[:sorted_by]) %>
  </div>
    <%= render_filterrific_spinner %>
<%= f.submit 'Filter' %>
<% end %>
<div id="vehicle-table">
  <%= render partial: 'vehicles/table', locals: { vehicles: @vehicles } %>
</div>

