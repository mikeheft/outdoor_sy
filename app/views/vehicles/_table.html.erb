<div id="filterrific_results">
   <div class="mb-3 mb-3">
    <%= page_entries_info vehicles %>
   </div>
    <div class="table-responsive">
    <table class="table table-striped table-hover table-bordered">
      <thead>
        <tr>
          <th> <%=filterrific_sorting_link(@filterrific, :owner_name)%></th>
          <th>Owner Email</th>
          <th>Vehicle Name</th>
          <th><%=filterrific_sorting_link(@filterrific, :vehicle_type) %></th>
          <th>Vehicle Length</th>
          <!-- Add more headers as needed -->
        </tr>
      </thead>
      <tbody>
        <% vehicles.each do |vehicle| %>
          <tr>
            <td><%= vehicle.owner_name %></td>
            <td><%= vehicle.owner_email %></td>
            <td><%= vehicle.name %></td>
            <td><%= vehicle.vehicle_type %></td>
            <td><%= vehicle.formatted_length %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>

<% unless vehicles.empty? %>
<%= will_paginate vehicles  %>
<%end%>
